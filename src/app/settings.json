{
    "rows": [
        {
            "title": "Müşteri Bilgileri",
            "headerStyle": {
                "marginBottom": "0px",
                "fontSize": "16px",
                "color": "black",
                "fontWeight": "bold"
            },
            "columns": [
                {
                    "fields": [
                        {
                            "field": "customerName",
                            "title": "Müşteri Adı",
                            "type": "textbox",
                            "required": true,
                            "placeholder": "Müşteri Adını Giriniz"
                        },
                        {
                            "field": "source",
                            "title": "Kaynak",
                            "type": "dropdown",
                            "placeholder": "Kaynak Seçiniz",
                            "required": true,
                            "options": [
                                {
                                    "value": "ankara",
                                    "label": "Ankara"
                                },
                                {
                                    "value": "istanbul",
                                    "label": "İstanbul"
                                }
                            ]
                        },
                        {
                            "field": "phone",
                            "title": "Telefon",
                            "required": true,
                            "type": "maskinput",
                            "mask": "+90 (000) 000-00-00",
                            "placeholder": "+9"
                        },
                        {
                            "field": "birthDate",
                            "title": "Doğum Tarihi",
                            "type": "date",
                            "required": false
                        }
                    ]
                },
                {
                    "fields": [
                        {
                            "field": "accountType",
                            "title": "Hesap Türü",
                            "type": "dropdown",
                            "placeholder": "Hesap Türü Seçiniz",
                            "required": true,
                            "optionsUrl": "http://localhost:3001/api/fake/accounttype"
                        },
                        {
                            "field": "group",
                            "title": "Grup",
                            "type": "dropdown",
                            "placeholder": "Grup Seçiniz",
                            "required": false
                        },
                        {
                            "field": "website",
                            "title": "Web",
                            "required": false,
                            "type": "textbox",
                            "placeholder": "https://"
                        },
                        {
                            "field": "status",
                            "title": "Tip",
                            "type": "segmentedcontrol",
                            "required": true,
                            "optionsUrl": "http://localhost:3001/api/fake/accounttype",
                            
                            "color": "black",
                            "radius": "md",
                            "size": "sm",
                            "fullWidth": true,
                            "orientation": "horizontal"
                          }
                    ]
                },
                {
                    "fields": [
                        {
                            "field": "prCompany",
                            "title": "PR Şirketi",
                            "type": "dropdown",
                            "required": false
                        },
                        {
                            "field": "sector2",
                            "title": "Sektör",
                            "type": "dropdown",
                            "required": false,
                            "optionsUrl": "http://localhost:3001/api/fake/sectors"
                        },
                        {
                            "field": "corporateEmail",
                            "title": "Kurumsal E-Posta",
                            "type": "textbox",
                            "required": false
                        }
                    ]
                },
                {
                    "fields": [
                        {
                            "field": "logo",
                            "title": "Logo",
                            "type": "upload",
                            "required": false,
                            "uploadUrl": "http://localhost:8000/api/upload/product-image-s3",
                            "maxSize": 5242880,
                            "acceptedFileTypes": [
                                "image/png",
                                "image/jpeg",
                                "image/webp"
                            ],
                            "width": "100%",
                            "height": 220,
                            "uploadContext": "logo"
                        }
                    ]
                }
            ]
        },
        {
            "title": "Kurum Bilgileri",
            "headerStyle": {
                "marginBottom": "0px",
                "fontSize": "16px",
                "color": "black",
                "fontWeight": "bold"
            },
            "columns": [
                {
                    "fields": [
                        {
                            "field": "title",
                            "title": "Ünvan",
                            "type": "textbox",
                            "required": true
                        },
                        {
                            "field": "city",
                            "title": "İl",
                            "type": "dropdown",
                            "required": true,
                            "optionsUrl": "http://localhost:3001/api/fake/cities"
                        },
                        {
                            "field": "district",
                            "title": "İlçe",
                            "type": "dropdown",
                            "required": true,
                            "optionsUrl": "http://localhost:3001/api/fake/districts/{0}",
                            "refField": "city"
                        },
                        {
                            "field": "neighborhood",
                            "title": "Mahalle",
                            "type": "dropdown",
                            "required": true,
                            "optionsUrl": "http://localhost:3001/api/fake/neighborhoods/{0}",
                            "refField": "district"
                        },
                        {
                            "field": "privacy",
                            "title": "Gizlilik politikasını kabul ediyorum",
                            "type": "switch",
                            "defaultChecked": false
                        }
                        
                    ]
                },
                {
                    "fields": [
                        {
                            "field": "address",
                            "title": "Adres",
                            "type": "textarea",
                            "required": true,
                            "minRows": 1,
                            "maxRows": 4,
                            "autosize": true
                        },
                        {
                            "field": "accountingEmail",
                            "title": "Muhasebe E-Posta",
                            "type": "textbox",
                            "required": false
                        },
                        {
                            "field": "accountingPhone",
                            "title": "Muhasebe Telefon",
                            "type": "textbox",
                            "required": false
                        },
                        {
                            "field": "tags2",
                            "title": "Etiketler",
                            "type": "multiselect",
                            "placeholder": "Etiketleri seçiniz",
                            "options": [
                                {
                                    "value": "important",
                                    "label": "Önemli"
                                },
                                {
                                    "value": "red",
                                    "label": "Kırmızı"
                                },
                                {
                                    "value": "green",
                                    "label": "Yeşil"
                                },
                                {
                                    "value": "blue",
                                    "label": "Mavi"
                                }
                            ]
                        }
                    ]
                },
                {
                    "fields": [
                        {
                            "field": "taxOffice",
                            "title": "Vergi Dairesi",
                            "type": "textbox",
                            "required": false
                        },
                        {
                            "field": "taxNumber",
                            "title": "Vergi No",
                            "type": "textbox",
                            "required": false,
                            "maxLength": 10
                        },
                        {
                            "field": "amount",
                            "title": "Tahmini bütçe",
                            "type": "number",
                            "required": false,
                            "suffix": "₺",
                            "defaultValue": 0,
                            "thousandSeparator": ",",
                            "decimalSeparator": "."
                        },
                        {
                            "field": "department",
                            "title": "Departman",
                            "type": "multiselect",
                            "placeholder": "Departman seçiniz",
                            "optionsUrl": "http://localhost:3001/api/fake/departments"
                        }
                    ]
                },
                {
                    "fields": [
                        {
                            "field": "categories",
                            "title": "Categories",
                            "type": "tree",
                            "required": true,
                            "optionsUrl": "http://localhost:3001/api/tree",
                            "levelOffset": 23
                        }
                    ]
                }
            ]
        },
        {
            "title": "Galeri",
            "headerStyle": {
                "marginBottom": "0px",
                "fontSize": "16px",
                "color": "black",
                "fontWeight": "bold"
            },
            "columns": [
                {
                    "fields": [
                        {
                            "field": "productImages",
                            "title": "Ürün Görselleri",
                            "type": "uploadcollection",
                            "required": false,
                            "uploadUrl": "http://localhost:8000/api/upload/product-image-s3",
                            "maxSize": 5242880,
                            "acceptedFileTypes": [
                                "image/png",
                                "image/jpeg",
                                "image/webp"
                            ],
                            "width": 250,
                            "height": 250,
                            "uploadContext": "product",
                            "maxImages": 10
                        }
                    ]
                }
            ]
        },
        {
            "title": "Ek Tanımlamalar",
            "headerStyle": {
                "marginBottom": "0px",
                "fontSize": "16px",
                "color": "black",
                "fontWeight": "bold"
            },
            "columns": [
                {
                    "fields": [
                        {
                            "field": "variantdata",
                            "title": "Varyantlar",
                            "type": "sublistform",
                            "buttonTitle": "Varyant Ekle",
                            "required": true,
                            "columns": [
                              { "key": "color", "title": "Renk" },
                              { "key": "size__title", "title": "Beden" },
                              { "key": "stock", "title": "Stok" },
                              { "key": "variantdata2", "title": "Varyantlar2", "type": "json", "subColumns": [
                                { "key": "color2", "title": "Renk" },
                                { "key": "size2__title", "title": "Beden" }
                              ]}
                            ],
                            "subform": {
                              "rows": [
                                {
                                  "columns": [
                                    {
                                      "fields": [
                                        {
                                          "field": "color",
                                          "title": "Renk",
                                          "type": "textbox",
                                          "required": true
                                        },
                                        {
                                            "field": "city",
                                            "title": "İl",
                                            "type": "dropdown",
                                            "required": true,
                                            "optionsUrl": "http://localhost:3001/api/fake/cities"
                                        },
                                        {
                                          "field": "size",
                                          "title": "Beden",
                                          "type": "dropdown",
                                          "options": [
                                            { "value": "S", "label": "Small" },
                                            { "value": "M", "label": "Medium" },
                                            { "value": "L", "label": "Large" }
                                          ],
                                          "required": true
                                        },
                                        {
                                          "field": "stock",
                                          "title": "Stok",
                                          "type": "number",
                                          "required": true
                                        }
                                      ]
                                    }
                                  ]
                                },
                                {
                                    "title": "Özellikler2",
                                    "headerStyle": {
                                        "marginBottom": "0px",
                                        "fontSize": "16px",
                                        "color": "black",
                                        "fontWeight": "bold"
                                    },
                                    "columns": [
                                        {
                                            "fields": [
                                                {
                                                    "field": "variantdata2",
                                                    "title": "Varyantlar",
                                                    "type": "sublistform",
                                                    "buttonTitle": "Varyant Ekle",
                                                    "required": true,
                                                    "columns": [
                                                      { "key": "color2", "title": "Renk" },
                                                      { "key": "size2__title", "title": "Beden" }
                                                    ],
                                                    "subform": {
                                                      "rows": [
                                                        {
                                                          "columns": [
                                                            {
                                                              "fields": [
                                                                {
                                                                  "field": "color2",
                                                                  "title": "Renk",
                                                                  "type": "textbox",
                                                                  "required": true
                                                                },
                                                                {
                                                                  "field": "size2",
                                                                  "title": "Beden",
                                                                  "type": "dropdown",
                                                                  "options": [
                                                                    { "value": "S", "label": "Small" },
                                                                    { "value": "M", "label": "Medium" },
                                                                    { "value": "L", "label": "Large" }
                                                                  ],
                                                                  "required": true 
                                                                }
                                                              ]
                                                            }
                                                          ]
                                                        }
                                                      ]
                                                    },
                                                    "size": "sm"
                                                }
                                            ]
                                        }
                                    ]
                                }
                              ]
                            },
                            "size": "md"
                        }
                    ]
                }
            ]
        },
        {
            "title": "Açıklama",
            "headerStyle": {
                "marginBottom": "0px",
                "fontSize": "16px",
                "color": "black",
                "fontWeight": "bold"
            },
            "columns": [
                {
                    "fields": [
                       {
                        "field": "description",
                        "title": "Açıklama",
                        "type": "htmleditor",
                        "required": true,
                        "editorHeight": 300
                       }
                    ]
                }
            ]
        }
    ]
}